@{
  Layout="Shared/_Layout.cshtml";
}
<h2>Clients</h2>
<form class="form-inline">
    <div class="form-group">
        <div class="input-group">
            <input type="text" name="stylist-search" class="form-control search" placeholder="Search stylists">
            <div class="input-group-addon">Search!</div>
        </div>
    </div>

    <a href="/client/new"><button type="button" class="new-client btn btn-info">New Client</button></a>
</form>


@if (Model.Count != 0)
  {
    @foreach (var client in Model)
    {
            <h5><a href="/client/@client.GetId()">@client.GetName()</a></h5>
            <p><a href="/client/delete/@client.GetId()">Delete</a></p>

    }
  }
  else
  {
      <h4>There aren't any clients yet! Would you like to <a href="/client/new">add one</a>?</h4>
  }
