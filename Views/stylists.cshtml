@{
    Layout="Shared/_Layout.cshtml";
}
<h2>Stylists</h2>
<form class="form-inline">
    <div class="form-group">
        <input type="text" name="stylist-search" class="form-control" placeholder="Search stylists">
    </div>
</form>
<a href="/stylist/new"><button type="button" class="new-stylist btn btn-info">New Stylist</button></a>

@if (Model.Count != 0)
{
    @foreach (var stylist in Model)
    {
        <h5><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></h5>
        <p><a href="/stylist/delete/@stylist.GetId()">Delete</a></p>
    }
}
