@{
  Layout="Shared/_Layout.cshtml";
}

<h2>New Client</h2>
@if(Model.Count != 0)
{
    <form action="/clients" method="post">
        <div class="form-group">
            <input name="client-name" class="form-control" type="text" placeholder="Client Name">
        </div>
        <label>Stylist</label>
        <select name="stylist-id">

            <option></option>
           @foreach (var stylist in Model)
           {
             <option value="@stylist.GetId()">@stylist.GetName()</option>
           }
            </select>
        <button type="submit" class="btn btn-info">Add</button>
    </form>
}
else
{
    <h3>There are no stylists to pair with clients yet. Please <a href="/stylist/new">add a stylist</a> before adding your first client.</h3>
}
